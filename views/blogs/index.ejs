<%- include ('../partials/header') %> 

<div class="ui main text container segment">
    <div class="ui huge header">RESTful Blog App</div>
        <div class="ui divided item">
            <% blogs.forEach(function(blog) { %>

                <div class="ui celled grid">
                    <div class="row">

                        <div class="three wide column">
                            <img src="<%= blog.image %> " alt="">
                        </div>

                        <div class="thirteen wide column">
                            <a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>
                            
                            <div class="meta">
                                <span><%= blog.created.toDateString() %></span>
                            </div>

                            <div class="description">
                                <% if(blog.body){ %>
                                <p><%- blog.body.substring(0,200) %>.......</p>
                                <% } %>
                            </div>

                            <div class="extra">
                                <a href="/blogs/<%= blog._id %>" class="ui green basic button">More</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %> 