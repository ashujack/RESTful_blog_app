<%- include ('../partials/header') %> 
<div class="ui main text container segment">
    <div class="ui huge header"> 
        Reply on comment
    </div>
    <div class="ui divided item">
            <div class="ui celled grid">
                <div class="row">

                    <div class="three wide column">
                        <img src="<%= blog.image %> " alt="">
                    </div>

                    <div class="thirteen wide column">
                        <a href="/blogs/<%= blog._id %>" class="header"><%= blog.title %></a>
                        
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>

                        <div class="description">
                            <% if(blog.body){ %>
                            <p><%- blog.body.substring(0,200) %>.......</p>
                            <% } %>
                        </div>

                        <div class="extra">
                            <a href="/blogs/<%= blog._id %>" class="ui green basic button">More</a>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <p><strong><%=comment.author.username %>:</strong> <%= comment.text %></p>

    <form class="ui form" action="/blogs/<%= blog._id %>/comments/<%= comment._id %>/replies" method="POST">
        <div class="field">
            <label>write you reply</label>
            <textarea name="reply[text]"> </textarea>
        </div>
        <input class="ui blue big basic button" type="submit">
    </form>
    
</div>

<%- include ('../partials/footer') %> 